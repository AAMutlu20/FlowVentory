@using Microsoft.AspNetCore.Mvc.Rendering
@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - FlowVentory</title>
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/account.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/layout_fix.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/product_page.css" asp-append-version="true"/>
</head>
<body>
<div class="page-wrapper">
    <div class="app-container">
        <!-- Sidebar -->
        @Html.Partial("_SidebarPartial")

        <!-- Main Content Area -->
        <main role="main" class="main-content pb-3">
            @RenderBody()
        </main>
    </div>
</div>

<script src="~/js/account.js" asp-append-version="true"></script>
<script src="~/js/product_page.js" asp-append-version="true"></script>
<script type="module" src="https://cdn.jsdelivr.net/npm/ionicons@latest/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://cdn.jsdelivr.net/npm/ionicons@latest/dist/ionicons/ionicons.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
